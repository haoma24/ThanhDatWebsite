        //Ham show div khi checked Giao Hang
        $(document).ready(function () {
            $('input[type="radio"]').click(function () {
                if ($(this).attr('id') == 'rbtnGH') {
                    $('#GH-checked').show();
                }

                else {
                    $('#GH-checked').hide();
                }
            });
        });
        //Ham show div khi checked Den Lay
