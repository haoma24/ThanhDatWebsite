                    $('#DL-checked').hide();
                }
            });
        });
        $(document).ready(function () {
            $('input[type="radio"]').click(function () {
                if ($(this).attr('id') == 'rbtnCK' || $(this).attr('id') == 'rbtnVDT') {
                    $('#OpenModal').click();
                    $('#PayOnl').show();
                }

                else {
                    $('#PayOnl').hide();
                }
            });
        });
