
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ps-3 pe-3">
    <div class="container bg-light rounded-5">
        <div class="row">
            <div class="col-12 col-md-6 d-none d-md-block">
                <div class="d-flex flex-column justify-content-between h-100 p-3 p-md-4 p-xl-5">
                    <img class="img-fluid rounded mx-auto my-4" loading="lazy" src="~/Media/Thanh.png" width="700" height="80" alt="BootstrapBrain Logo">
                    <p class="mb-0">Đã có tài khoản? <a href="@Url.Action("DangNhap","Home")" class="link-secondary text-decoration-none">Đăng nhập</a></p>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="p-3 p-md-4 p-xl-5">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-5">
                                <h3>Đăng ký</h3>
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm("DangKyUser", "Home", FormMethod.Post, new { @class = "d-flex justify-content-between" }))
                    {<div class="row gy-3 gy-md-4 overflow-hidden">
                            <div class="col-12">
                                <div><p class="text-success fw-bold">@ViewBag.msg</p></div>
                                <div><p class="text-danger fw-bold">@ViewBag.err</p></div>
                                <label for="email" class="form-label">Email<span class="text-danger">*</span></label>
                                @Html.TextBox("TenTK", null, new { @class = "form-control" })
                            </div>
                            <div class="col-12">
                                <label for="password" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                                @Html.TextBox("MK", null, new { @class = "form-control", type = "password" })
                            </div>
                            <div class="col-12">
                                <label for="password" class="form-label">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                                @Html.TextBox("XacNhanMK", null, new { @class = "form-control", type = "password" })
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" name="remember_me" id="remember_me">
                                    <label class="form-check-label text-secondary" for="remember_me">
                                        Nhớ mật khẩu
                                    </label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <button id="btnDN" class="btn btn-outline-primary" type="submit">Đăng ký</button>
                                </div>
                            </div>
                        </div>
                    }
                <div class="row">
                    <div class="col-12 col-md-6 d-flex d-md-none">
                        <div class="d-flex flex-column justify-content-between h-100 p-3 p-md-4 p-xl-5">
                            <p class="mb-0">Đã có tài khoản? <a href="@Url.Action("DangNhap","Home")" class="link-secondary text-decoration-none">Đăng nhập</a></p>
                        </div>
                    </div>
                    <div class="col-12">
                        <p class="mt-5 mb-4">Hoặc đăng nhập với</p>
                        <div class="d-flex gap-3 flex-column flex-xl-row">
                            <a href="/Home/DangNhap" class="btn bsb-btn-xl btn-outline-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                                    <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                                </svg>
                                <span class="ms-2 fs-6">Google</span>
                            </a>
                            </a>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</section>

