@model IEnumerable<ThanhDatWebsite.ReceiptDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class="btn btn-primary"})
</p>
<table class="table table-striped table-hover table-light overflow-scroll table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReceiptID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Receipts.BranchID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.ReceiptID)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Products.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Receipts.BranchID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReceiptID, id2=item.ProductID  }) |
            @Html.ActionLink("Details", "Details", new { id = item.ReceiptID, id2 = item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ReceiptID, id2 = item.ProductID })
        </td>
    </tr>
}

</table>
